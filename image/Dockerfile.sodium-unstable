FROM debian:jessie

COPY sodium.patch /tmp/

RUN { set -ex; \
	BUILD_DEPS="nodejs git build-essential python ca-certificates libtool autoconf automake"; \
	apt-get update; \
	apt-get install --no-install-recommends -y $BUILD_DEPS; \

	# install libsodium
	git clone https://github.com/jedisct1/libsodium.git /tmp/libsodium --depth 1 --branch 1.0.10; \
	cd /tmp/libsodium; \
	# libsodium v1.0.10
	git checkout fce6852d64339efa33c0ee4130b3107b888d6067; \
	./autogen.sh; \
	./configure; \
	make -j 8; \
	make check -j 8; \

	# install cjdns
	git clone https://github.com/cjdelisle/cjdns.git /tmp/cjdns; \
	cd /tmp/cjdns; \
	git checkout 7c51e406406e0c35262b5bba083fe9a79696d6af; \
	git apply /tmp/sodium.patch; \
	./do; \
	mv cjdroute /usr/bin; \

	# clean up
	apt-get remove -y $BUILD_DEPS; \
	apt-get autoremove -y; \
	rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*; \
}

VOLUME /data/cjdns

COPY start-cjdns /usr/bin/
CMD ["start-cjdns"]
